@model Product

<div class="my-4 border-0 card shadow">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<div class="border mt-4 p-3">

				<div class="form-floating py-2 col-12">
					<input asp-for="ISBN" class="form-control border-0 shadow" disabled placeholder="ISBN Number" />
					<label asp-for="ISBN" class="ms-2">ISBN</label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Title" class="form-control border-0 shadow" disabled placeholder="Product Name" />
					<label asp-for="Title" class="ms-2">Product Title</label>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Description" class="form-control border-0 shadow" disabled placeholder="Product Description" />
					<label asp-for="Description" class="ms-2">Description</label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price" class="form-control border-0 shadow" disabled placeholder="Product Price" />
					<label asp-for="Price" class="ms-2">Price</label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Author" class="form-control border-0 shadow" disabled placeholder="Author Name" />
					<label asp-for="Author" class="ms-2">Author Name</label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price50" class="form-control border-0 shadow" disabled placeholder="Price for +50 copies" />
					<label asp-for="Price50" class="ms-2">Price for +50 copies</label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price100" class="form-control border-0 shadow" disabled placeholder="Price for +100 copies" />
					<label asp-for="Price100" class="ms-2">Price for +100 copies</label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ListPrice" class="form-control border-0 shadow" disabled placeholder="List Price" />
					<label asp-for="ListPrice" class="ms-2">List Price</label>
				</div>

				<div class="row justify-content-center mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-outline-danger form-control">
							Delete Product
						</button>
					</div>

					<div class="col-6 col-md-3">
						<a class="btn btn-outline-secondary form-control " asp-controller="Product" asp-action="Index">
							Back To List
						</a>
					</div>
				</div>

			</div>

		</form>
	</div>
</div>


